<p id="notice"><%= notice %></p>

<h1>Units</h1>

<table>
  <thead>
    <tr>
	  <th>Course</th>
      <th>Unit1</th>
      <th>Unit2</th>
      <th>Unit3</th>
      <th>Unit4</th>
      <th>Unit5</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
	    <td><%= unit.course.name %></td>
        <td><%= unit.unit1 %></td>
        <td><%= unit.unit2 %></td>
        <td><%= unit.unit3 %></td>
        <td><%= unit.unit4 %></td>
        <td><%= unit.unit5 %></td>
        <td><%= link_to 'Show', unit %></td>
        <td><%= link_to 'Edit', edit_unit_path(unit) if teacher? %></td>
        <td><%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } if teacher? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Unit', new_unit_path if teacher? %>
